<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_rxjava"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wpmac.mzeht.rxjava.RxjavaActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <ImageView android:id="@+id/rxImage"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
            />

            <Button
                android:id="@+id/method0" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0:RxJava基础概念"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="1:快捷创建事件队列 Observable.just(T...)"
            />

            <Button
                android:id="@+id/method1" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:快捷创建事件队列 Observable.just(T...)"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="2:快捷创建事件队列 Observable.from(T[]) / from(Iterable? extends T"/>
            <Button
                android:id="@+id/method2" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2:快捷创建事件队列 Observable.from(T[]) / from(Iterable ? extends T"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="3: subscribe()支持不完整定义的回调"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/method3" android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="一个参数"
                />

                <Button
                    android:id="@+id/method4" android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="两个参数"
                />
                <Button
                    android:id="@+id/method5" android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="三个参数"
                />
            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"

                      android:text="6 线程控制-Scheduler"/>
            <Button
                android:id="@+id/method6"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="6 线程控制-Scheduler"
            />


            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="7: 变换 map()"/>
            <Button
                android:id="@+id/method7" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method7资源id变换为Drawable"
            />
            <Button
                android:id="@+id/method8" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method8演示循环嵌套"
            />

            <Button
                android:id="@+id/method9" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method9依次发射参数"
            />
            <Button
                android:id="@+id/method10" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method10数据转换后发射"
            />
            <Button
                android:id="@+id/method9update" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method11 9的简化"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="9:引入flatmap()"/>
            <Button
                android:id="@+id/method12" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method12 普通调用"
            />
            <Button
                android:id="@+id/method13" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="method13 使用map操作符"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="10: flatMap()的使用"/>

            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text=""/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
